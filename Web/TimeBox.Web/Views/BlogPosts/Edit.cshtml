@model TimeBox.Web.ViewModels.BlogPost.EditBlogPostInputModel
@{
    this.ViewData["Title"] = "Редактирай публикация";
}


<form method="post" class="col-md-6 offset-md-3">
    <h1>@this.ViewData["Title"]</h1>
    <input type="hidden" asp-for="Id">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label aps-for="Title">Заглавие</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validatio-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label aps-for="BlogText">Текст на публикация</label>
        <textarea asp-for="BlogText" class="form-control" rows="5"></textarea>
        <span asp-validatio-for="BlogText" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>