@model TimeBox.Web.ViewModels.Note.CreateNoteInputModel
@{
    this.ViewData["Title"] = "Нова бележка";
}

<form method="post" class="col-md-6 offset-md-3">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label aps-for="Title">Заглавие</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validatio-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label aps-for="Description">Текст на бележка</label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validatio-for="Description" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>